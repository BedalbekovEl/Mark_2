<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">




        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit"
            android:drawableStart="@drawable/custom_email"
            android:hint="@string/email_address"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/custom_style"/>

        <EditText
            android:id="@+id/thm"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit"
            android:drawableStart="@drawable/custom_theme"
            android:hint="@string/thm"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            style="@style/custom_style"/>

        <EditText
            android:id="@+id/mssg"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit_1"
            android:drawableStart="@drawable/custom_message"
            android:hint="@string/message"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thm"
            style="@style/custom_style"/>

        <Button
            android:id="@+id/snd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:text="@string/send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mssg"/>



</androidx.constraintlayout.widget.ConstraintLayout>